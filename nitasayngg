  <!-- Floating Hearts (background) -->
  <canvas class="floater" id="heartsCanvas" width="800" height="400" aria-hidden="true"></canvas>

  <script>
    // ====== Helper: create small heart confetti ======
    function popHearts(x=window.innerWidth/2, y=window.innerHeight/2, count=18){
      for(let i=0;i<count;i++){
        const s = document.createElement('div');
        s.textContent = '‚ù§';
        s.style.position='fixed';
        s.style.left = x+'px';
        s.style.top = y+'px';
        s.style.transform='translate(-50%,-50%)';
        s.style.fontSize=(10+Math.random()*22)+'px';
        s.style.pointerEvents='none';
        s.style.zIndex=9999;
        s.style.filter='drop-shadow(0 6px 10px rgba(255,45,85,.35))';
        document.body.appendChild(s);

        const dx = (Math.random()*2-1)*120;
        const dy = - (40+Math.random()*140);
        const rot = (Math.random()*2-1)*180;

        s.animate([
          { transform: `translate(-50%,-50%) translate(0px,0px) rotate(0deg)`, opacity:1 },
          { transform: `translate(-50%,-50%) translate(${dx}px,${dy}px) rotate(${rot}deg)`, opacity:0 }
        ], { duration: 900+Math.random()*600, easing:'cubic-bezier(.2,.8,.2,1)', fill:'forwards' });

        setTimeout(()=> s.remove(), 1700);
      }
    }

    // ====== Gate (Gembok) logic ======
    const gate = document.getElementById('gate');
    const lock = document.getElementById('lock');
    const lockIcon = document.getElementById('lockIcon');
    const unlockBtn = document.getElementById('unlockBtn');

    function unlockSequence(clientX, clientY){
      // Small click animation on the lock
      lockIcon.animate(
        [{ transform:'scale(1) rotate(0deg)' }, { transform:'scale(1.18) rotate(-20deg)' }, { transform:'scale(1) rotate(-28deg)' }],
        { duration: 520, easing:'cubic-bezier(.2,.8,.2,1)' }
      );
      // Heart confetti
      popHearts(clientX, clientY, 22);
      // Fade the gate away
      gate.classList.add('unlocked');
    }
    lock.addEventListener('click', (e)=> unlockSequence(e.clientX, e.clientY));
    unlockBtn.addEventListener('click', (e)=> unlockSequence(window.innerWidth/2, window.innerHeight/2));

    // ====== Floating hearts canvas background ======
    (function(){
      const c = document.getElementById('heartsCanvas');
      const ctx = c.getContext('2d');
      let W = c.width = Math.min(1000, window.innerWidth*0.9);
      let H = c.height = 420;

      const hearts = [];
      const max = 26;

      function makeHeart(){
        return {
          x: Math.random()*W,
          y: H + Math.random()*80,
          size: 8 + Math.random()*12,
          speed: 0.7 + Math.random()*1.2,
          drift: (Math.random()*2-1) * 0.4,
          alpha: 0.35 + Math.random()*0.4
        };
      }
      for(let i=0;i<max;i++) hearts.push(makeHeart());

      function drawHeart(x,y,s,alpha){
        ctx.save();
        ctx.translate(x,y);
        ctx.scale(s/12, s/12);
        ctx.globalAlpha = alpha;
        ctx.fillStyle = '#ff4d88';
        ctx.beginPath();
        // Simple heart path
        ctx.moveTo(0, -5);
        ctx.bezierCurveTo(-6,-12, -14,-2, 0, 8);
        ctx.bezierCurveTo(14,-2, 6,-12, 0, -5);
        ctx.fill();
        ctx.restore();
      }

      function tick(){
        ctx.clearRect(0,0,W,H);
        hearts.forEach(h=>{
          h.y -= h.speed;
          h.x += h.drift;
          if(h.y < -10) Object.assign(h, makeHeart(), { y: H+10 });
          drawHeart(h.x, h.y, h.size, h.alpha);
        });
        requestAnimationFrame(tick);
      }
      tick();

      window.addEventListener('resize', ()=>{
        W = c.width = Math.min(1000, window.innerWidth*0.9);
      });
    })();

    // ====== Footer year ======
    document.getElementById('year').textContent = new Date().getFullYear();

    // Extra: Pop hearts when main heart is clicked
    document.addEventListener('click', function(ev){
      const target = ev.target;
      if(target.closest('.pulse')){
        popHearts(ev.clientX, ev.clientY, 18);
      }
    }, false);
  </script>
</body>
